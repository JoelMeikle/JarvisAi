{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "VoiceInterface",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "show": true,
        "hide": true,
        "close": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.voice-interface.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 200,
        "width": 200,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "title": "VoiceInterface",
        "alwaysOnTop": true,
        "x": 1720,
        "y": 10,
        "skipTaskbar": true
      }
    ]
  }
}